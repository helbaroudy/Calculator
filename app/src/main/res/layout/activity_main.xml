<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b1"
        android:layout_toEndOf="@+id/b1"
        android:text="2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b2"
        android:layout_toEndOf="@+id/b2"
        android:text="3"
        android:textSize="20sp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="192dp"
        android:text="1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b2"
        android:layout_toStartOf="@+id/b2"
        android:text="4"
        android:textSize="20sp" />

    <Button
        android:id="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/b2"
        android:layout_below="@+id/b2"
        android:text="5"
        android:textSize="20sp" />

    <Button
        android:id="@+id/b6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b2"
        android:layout_toEndOf="@+id/b2"
        android:text="6"
        android:textSize="20sp" />

    <Button
        android:id="@+id/b7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b4"
        android:layout_toStartOf="@+id/b2"
        android:text="7"
        android:textSize="20sp" />

    <Button
        android:id="@+id/b8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/b2"
        android:layout_below="@+id/b4"
        android:text="8"
        android:textSize="20sp" />

    <Button
        android:id="@+id/b9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b4"
        android:layout_toEndOf="@+id/b2"
        android:text="9"
        android:textSize="20sp" />

    <Button
        android:id="@+id/b0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/b2"
        android:layout_below="@+id/b7"
        android:text="0"
        android:textSize="20sp" />

    <Button
        android:id="@+id/beq"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bplus"
        android:layout_toEndOf="@+id/bdiv"
        android:text="="
        android:textSize="20sp" />

    <Button
        android:id="@+id/bdiv"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bplus"
        android:layout_toEndOf="@+id/bmul"
        android:text="/"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bmul"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/beq"
        android:layout_toEndOf="@+id/bminus"
        android:text="*"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bminus"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/beq"
        android:layout_marginStart="94dp"
        android:text="-"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bplus"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:layout_marginStart="30dp"
        android:text="+"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="241dp"
        android:layout_height="52dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="40sp" />
</RelativeLayout>